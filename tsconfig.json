{
	"compilerOptions": {
		"target": "es2021",
		"module": "commonjs",
		"removeComments": true,
		"outDir": ".",
		"pretty": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"forceConsistentCasingInFileNames": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"resolveJsonModule": true
	},
	"include": ["src"],
	"exclude": ["node_modules/**/*", "test"]
}
